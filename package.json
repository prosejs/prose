{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "commit": "./node_modules/cz-customizable/standalone.js",
    "test": ":lerna run test --scope={@prose/gatsby-theme-core,@prose/gatsby-theme",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
